<%- include("../partials/header") %>
<main class="container">
    <div class="flex-wrapper">
        <div class="p-5 rounded mt-3">
            <form action="/scrambles" method="POST">
                <div class="mb-3">
                    <label for="inputTitle" class="form-label">Title</label>
                    <input type="text" class="form-control" id="inputName" aria-describedby="inputTitleHelp" name="title" required>
                </div>
                <div class="mb-3">
                    <label for="inputDescription" class="form-label">Description</label>
                    <input type="text" class="form-control" id="inputDescription" aria-describedby="descriptionHelp" name="description" required>
                </div>
                <div class="mb-3">
                    <label for="inputPrompt" class="form-label">Prompt</label>
                    <input type="text" class="form-control" id="inputPrompt" aria-describedby="promptHelp" name="prompt" required>
                </div>
                <div class="mb-3">
                    <label for="inputAnswer" class="form-label">Your Answer</label>
                    <input type="text" class="form-control" id="inputAnswer" aria-describedby="answerHelp" name="answer" required>
                </div>
                <button type="submit" class="btn btn-primary">Create Scramble</button>
            </form>
        </div>
    </div>
</main>


    <%- include("../partials/footer") %>