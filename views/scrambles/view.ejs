<%- include("../partials/header") %>
    <main class="container">
        <div class="p-5 rounded mt-3">
            <% if (isCreator===true) { %>
            <div class="row">
                <p>You are the creator</p>
            </div>
            <% } %>
            <h2><%= scramble.title %></h2>
            <p><h4><%= scramble.description %></h4></p>
            <div class="row">
                <div class="col">

                </div>
                <div class="col">
                   <% scramble.participants.forEach(function(participant) { %>
                    <img class="rounded-circle shadow border" alt="avatar" src="<%= participant.avatar %>" style="width: 40px; height: 40px;margin-right: 4px;" />
                    <% }) %>
                </div>
            </div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Answer</th>
                    <th scope="col">By</th>
                </tr>
                </thead>
                <tbody>
                    <% scramble.answers.forEach(function(answer) { %>
                    <tr>
                        <td><%= answer.text %></td>
                        <td><%= answer.postedBy.name %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <ul class="nav nav-tabs">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="#">Scramble Link</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">QRCode</a>
                </li>
              </ul>
        </div>
    </main>


    <%- include("../partials/footer") %>